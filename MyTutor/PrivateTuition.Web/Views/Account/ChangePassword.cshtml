@model ChangePasswordModel

<div class="breadcrumbs">
    <div class="container">
        <h2>Şifre Değiştirme</h2>
    </div>
</div>

<section id="events" class="events">
    <div class="container">
        <div class="row">
            <div>

                <form asp-controller="Account" asp-action="ChangePassword" method="post">
                    <div class="row mt-4">
                        <div class="offset-3 col-md-6">
                            <div class="row mb-2">
                                <div class="col text-center">
                                    <h5> <strong class="text-primary">@User.Identity.Name</strong> kullanıcısı için mevcut şifre</h5>
                                </div>
                            </div>
                            <div class="row mb-2">
                                <div class="col-md-3">
                                    <label class="col-form-label" asp-for="OldPassword"></label>
                                </div>
                                <div class="col-md-9">
                                    <input class="form-control" asp-for="OldPassword" />
                                </div>
                                <strong><span asp-validation-for="OldPassword" class="text-danger offset-3 col ps-2"></span></strong>
                            </div>

                            <div class="row mb-2">
                                <div class="col-md-3">
                                    <label class="col-form-label" asp-for="NewPassword">Şifre</label>
                                </div>
                                <div class="col-md-9">
                                    <input class="form-control" asp-for="NewPassword" />
                                </div>
                                <strong><span asp-validation-for="NewPassword" class="text-danger offset-3 col ps-2"></span></strong>
                            </div>

                            <div class="row mb-2">
                                <div class="col-md-3">
                                    <label class="col-form-label" asp-for="ReNewPassword">Şifre Onayı</label>
                                </div>
                                <div class="col-md-9">
                                    <input class="form-control" asp-for="ReNewPassword" />
                                </div>
                                <strong><span asp-validation-for="ReNewPassword" class="text-danger offset-3 col ps-2"></span></strong>
                            </div>

                            <div class="row mt-3">
                                <div class="col text-end">
                                    <button class="btn btn-primary btn-md" type="submit">Şifreyi Değiştir</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>

            </div>
        </div>
    </div>
</section>