@model UserProfileModel
@inject UserManager<MyIdentityUser> UserManager
<!-- Page Title -->
<div class="breadcrumbs">
    <div class="container">
        <h2>Panom</h2>
    </div>
</div>
<div class="pagetitle">
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>
            <li class="breadcrumb-item active">Profile</li>
        </ol>
    </nav>
</div><!-- End Page Title -->

<section class="section profile">
    <input type="hidden" name="UserId" value=@Model.UserId />
    <div class="container" data-aos="fade-up">
        <div class="row" data-aos="zoom-in" data-aos-delay="100">
            <div class="col-xl-4">

                <div class="card">
                    <div class="card-body profile-card pt-4 d-flex flex-column align-items-center">
                        @*default picture*@
                        <img src="~/assets/img/trainers/trainer-1.jpg" alt="Profile" class="rounded-circle"> @*default pic*@

                        <h2>@Model.FirstName @Model.LastName</h2>
                        <h3>@Model.Job</h3>
                        <div class="social-links mt-2">
                            <a href="#" class="twitter"><i class="bi bi-twitter"></i></a>
                            <a href="#" class="facebook"><i class="bi bi-facebook"></i></a>
                            <a href="#" class="instagram"><i class="bi bi-instagram"></i></a>
                            <a href="#" class="linkedin"><i class="bi bi-linkedin"></i></a>
                        </div>
                    </div>
                </div>

            </div>

            <div class="col-xl-8">

                <div class="card">
                    <div class="card-body pt-3">
                        <!-- Bordered Tabs -->
                        <ul class="nav nav-tabs nav-tabs-bordered">

                            <li class="nav-item">
                                <button class="nav-link active" data-bs-toggle="tab" data-bs-target="#profile-edit">Profili Düzenle</button>
                            </li>

                            <li class="nav-item">
                                <button class="nav-link" data-bs-toggle="tab" data-bs-target="#profile-settings">Ayarlar</button>
                            </li>

                            <li class="nav-item">
                                <button class="nav-link" data-bs-toggle="tab" data-bs-target="#profile-change-password">Şifre Değiştir</button>
                            </li>

                        </ul>

                        <div class="tab-content pt-2">    
                            <!-- 1 Profile Edit Form -->
                            <div class="tab-pane fade show active profile-edit pt-3" id="profile-edit">
                                <form asp-controller="Account" asp-action="ProfileEdit" method="post">
                                    <input type="hidden" name="UserId" value=@Model.UserId />
                                    <div class="row mb-3">
                                        <label for="profileImage" class="col-md-4 col-lg-3 col-form-label">Profil Fotoğrafı</label>
                                        <div class="col-md-8 col-lg-9">
                                            <img src="~/assets/img/trainers/trainer-1.jpg" alt="Profile">
                                            <div class="pt-2">
                                                <a href="#" class="btn btn-primary btn-sm" title="Yeni profil fotoğrafı yükle"><i class="bi bi-upload"></i></a>
                                                <a href="#" class="btn btn-danger btn-sm" title="Profil fotoğrafını Sil"><i class="bi bi-trash"></i></a>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="row mb-3">
                                        <label asp-for="FirstName" class="col-md-4 col-lg-3 col-form-label">Ad</label>
                                        <div class="col-md-8 col-lg-9">
                                            <input asp-for="FirstName" name="fullName" type="text" class="form-control" id="fullName" placeholder="@Model.FirstName">
                                        </div>
                                    </div>

                                    <div class="row mb-3">
                                        <label asp-for="LastName" class="col-md-4 col-lg-3 col-form-label">Soyad</label>
                                        <div class="col-md-8 col-lg-9">
                                            <input asp-for="LastName" name="fullName" type="text" class="form-control" id="fullName" placeholder="@Model.LastName">
                                        </div>
                                    </div>
                                    <div class="row mb-3">
                                        <label asp-for="UserName" class="col-md-4 col-lg-3 col-form-label">Soyad</label>
                                        <div class="col-md-8 col-lg-9">
                                            <input asp-for="UserName" name="fullName" type="text" class="form-control" id="fullName" placeholder="@Model.UserName">
                                        </div>
                                    </div>

                                    @if (User.IsInRole("Teacher"))
                                    {
                                        <div class="row mb-3">
                                            <label asp-for="Description" class="col-md-4 col-lg-3 col-form-label">Hakkımda</label>
                                            <div class="col-md-8 col-lg-9">
                                                <input asp-for="Description" type="text" name="about" class="form-control" id="about" style="height: 100px" placeholder="@Model.Description" />
                                            </div>
                                        </div>

                                    }

                                    <div class="row mb-3">
                                        <label asp-for="Job" class="col-md-4 col-lg-3 col-form-label">Meslek</label>
                                        <div class="col-md-8 col-lg-9">
                                            <input asp-for="Job" name="job" type="text" class="form-control" id="Job" placeholder="@Model.Job">
                                        </div>
                                    </div>

                                    <div class="row mb-3">
                                        <label asp-for="City" class="col-md-4 col-lg-3 col-form-label">Şehir</label>
                                        <div class="col-md-8 col-lg-9">
                                            <input asp-for="City" name="country" type="text" class="form-control" id="Country" placeholder="@Model.City">
                                        </div>
                                    </div>

                                    <div class="row mb-3">
                                        <label asp-for="District" class="col-md-4 col-lg-3 col-form-label">İlçe</label>
                                        <div class="col-md-8 col-lg-9">
                                            <input asp-for="District" name="address" type="text" class="form-control" id="Address" placeholder="@Model.District">
                                        </div>
                                    </div>

                                    <div class="row mb-3">
                                        <label asp-for="PhoneNumber" class="col-md-4 col-lg-3 col-form-label">Telefon</label>
                                        <div class="col-md-8 col-lg-9">
                                            <input asp-for="PhoneNumber" name="phone" type="text" class="form-control" id="Phone" placeholder="+90 (564) 486 x2x7">
                                        </div>
                                    </div>

                                    <div class="row mb-3">
                                        <label asp-for="Email" class="col-md-4 col-lg-3 col-form-label">Email</label>
                                        <div class="col-md-8 col-lg-9">
                                            <input asp-for="Email" name="email" type="email" class="form-control" id="Email" placeholder="example@example.com">
                                        </div>
                                    </div>

                                    <div class="text-center">
                                        <button type="submit" class="btn btn-success">Değişiklikleri Kaydet</button>
                                    </div>
                                </form><!-- End Profile Edit Form -->

                            </div>

                            <!-- 2 Settings Form -->
                            <div class="tab-pane fade pt-3" id="profile-settings">
                                <form>
                                    <div class="row mb-3">
                                        <label for="fullName" class="col-md-4 col-lg-3 col-form-label">Mail Bildirimleri</label>
                                        <div class="col-md-8 col-lg-9">
                                            <div class="form-check">
                                                <input class="form-check-input" type="checkbox" id="changesMade" checked>
                                                <label class="form-check-label" for="changesMade">
                                                    Hesap Hareketleri
                                                </label>
                                            </div>
                                            <div class="form-check">
                                                <input class="form-check-input" type="checkbox" id="newProducts" checked>
                                                <label class="form-check-label" for="newProducts">
                                                    Ders Talepleri
                                                </label>
                                            </div>
                                            <div class="form-check">
                                                <input class="form-check-input" type="checkbox" id="proOffers">
                                                <label class="form-check-label" for="proOffers">
                                                    İlanlarımı ilgilendiren teklifler
                                                </label>
                                            </div>
                                            <div class="form-check">
                                                <input class="form-check-input" type="checkbox" id="securityNotify" checked disabled>
                                                <label class="form-check-label" for="securityNotify">
                                                    Güvenlik uyarıları
                                                </label>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row mb-3">
                                        <label for="fullName" class="col-md-4 col-lg-3 col-form-label">SMS Bildirimleri</label>
                                        <div class="col-md-8 col-lg-9">
                                            <div class="form-check">
                                                <input class="form-check-input" type="checkbox" id="newProducts" checked>
                                                <label class="form-check-label" for="newProducts">
                                                    Ders Talepleri
                                                </label>
                                            </div>

                                        </div>
                                    </div>


                                    <div class="text-center">
                                        <button type="submit" class="btn btn-primary">Değişikleri Kaydet</button>
                                    </div>
                                </form>

                            </div>
                            <!-- End settings Form -->

                            <!-- 3 Change Password Form -->
                            <div class="tab-pane fade pt-3" id="profile-change-password">

                                <form asp-controller="Account" asp-action="ChangePassword" method="post">

                                    <div class="row mb-2">
                                        <div class="col text-center">
                                            <h5> <strong class="text-primary">@User.Identity.Name</strong></h5>
                                        </div>
                                    </div>

                                    <div class="row mb-3">
                                        <label class="col-md-4 col-lg-3 col-form-label" asp-for="OldPassword">Şifre</label>
                                        <div class="col-md-8 col-lg-9">
                                            <input name="OldPassword" class="form-control" asp-for="OldPassword" id="currentPassword">
                                        </div>
                                        <strong><span asp-validation-for="OldPassword" class="text-danger offset-3 col ps-2"></span></strong>
                                    </div>

                                    <div class="row mb-3">
                                        <label asp-for="NewPassword" class="col-md-4 col-lg-3 col-form-label">Yeni Şifre</label>
                                        <div class="col-md-8 col-lg-9">
                                            <input asp-for="NewPassword" name="newpassword" class="form-control" id="newPassword">
                                        </div>
                                        <strong><span asp-validation-for="NewPassword" class="text-danger offset-3 col ps-2"></span></strong>
                                    </div>

                                    <div class="row mb-3">
                                        <label asp-for="ReNewPassword" class="col-md-4 col-lg-3 col-form-label">Şifre Onayı</label>
                                        <div class="col-md-8 col-lg-9">
                                            <input asp-for="ReNewPassword" name="renewpassword" class="form-control" id="renewPassword">
                                        </div>
                                        <strong><span asp-validation-for="ReNewPassword" class="text-danger offset-3 col ps-2"></span></strong>
                                    </div>

                                    <div class="text-center">
                                        <button type="submit" class="btn btn-primary">Şifreyi Değiştir</button>
                                    </div>
                                </form><!-- End Change Password Form -->
                               
                            </div>

                        </div><!-- End Bordered Tabs -->

                    </div>
                </div>

            </div>
        </div>
    </div>

</section>
