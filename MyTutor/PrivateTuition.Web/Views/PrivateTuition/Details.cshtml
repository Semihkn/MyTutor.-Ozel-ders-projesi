@{
    ViewData["Title"] = "Details";
}

@model ShowCardDetailModel

<div class="breadcrumbs">
    <div class="container">
        <h2>İlan Detayları</h2>
    </div>
</div>

<section id="course-details" class="course-details">
    <div class="container" data-aos="fade-up">

        <div class="row">
            <div class="col-lg-8">
                @if (Model.ShowCard.Teacher.AvatarUrl != null)
                {
                    <img src="~/images/@Model.ShowCard.Teacher.AvatarUrl">
                }
                else
                {
                    <img src="~/assets/img/course-details.jpg" class="img-fluid" alt="">
                    //default pic
                }

                <h3>@Model.ShowCard.Title</h3>
                <p> @Model.ShowCard.Description </p>
            </div>
            <div class="col-lg-4">

                <div class="course-info d-flex justify-content-between align-items-center">
                    <h5>Öğretmen</h5>
                    <p><a href="#">@Model.ShowCard.Teacher.Name</a></p>
                </div>

                <div class="course-info d-flex justify-content-between align-items-center">
                    <h5>Değerlendirme Puanı</h5>
                    @if (Model.ShowCard.Teacher.Comments == null)
                    {
                        <p class="card-text bg-opacity-10 bg-warning"> <i class="bi bi-star-fill text-warning"></i> Yeni Üye</p>
                    }
                    else
                    {
                        <p class="card-text bg-opacity-10 bg-warning"> <i class="bi bi-star-fill text-warning"></i> @Model.ShowCard.Teacher.RatingPoint @Model.ShowCard.Teacher.Comments.Count() üye yorumu</p>


                    }

                </div>

                <div class="course-info d-flex justify-content-between align-items-center">
                    <h5>Ücret</h5>
                    <p> @Math.Round(Model.ShowCard.LessonPrice) TL</p>
                </div>

                <div class="course-info d-flex justify-content-between align-items-center">
                    <h5>İlan Kategorisi</h5>
                    <p>@Model.Category.Name</p>
                </div>

                <div class="course-info d-flex justify-content-between align-items-center">
                    <h5>Ders</h5>
                    <p>@Model.ShowCard.Subject.Name</p>
                </div>



                <div class="course-info d-flex justify-content-between align-items-center">
                    <h5>Konum</h5>
                    <p>@Model.ShowCard.Teacher.City-@Model.ShowCard.Teacher.District</p>
                </div>

                <div class="course-info d-flex justify-content-between align-items-center">
                    <h5>Öğretmen Statü</h5>
                    <p>@Model.ShowCard.Teacher.TeacherStatue</p>
                </div>

                <div class="course-info d-flex justify-content-between align-items-center">
                    <h5>Öğrenci sayısı</h5>
                    <p>@Model.ShowCard.Teacher.TotalLesson</p>
                </div>

                <div class="course-info d-flex justify-content-between align-items-center">
                    <h5>Ders Konumu/Yeri</h5>
                    <p>@Model.ShowCard.WorkMethods</p>
                </div>

                <div class="course-info d-grid gap-1 col-12 mx-auto  align-items-center">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <a class="btn btn-sm btn-success btn-lg text-white" asp-controller="Student" asp-action="NewLessonRequest"> <i class="bi bi-arrow-90deg-right "></i> Ders Talep Et</a>
                    }
                    else
                    {
                        <a class="btn btn-sm btn-success btn-lg text-white" asp-area="" asp-controller="Account" asp-action="Login"> <i class="bi bi-arrow-90deg-right "></i> Ders Talep Et</a>
                    }
                </div>

            </div>
        </div>

    </div>
</section><!-- End Cource Details Section -->

