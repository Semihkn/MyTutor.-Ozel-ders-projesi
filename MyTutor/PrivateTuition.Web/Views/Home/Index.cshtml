<!-- Count Section(Students,Showcards,Teachers etc..) -->
<section id="counts" class="counts section-bg">
    <div class="container">

        <div class="row counters">

            <div class="col-lg-3 col-6 text-center">


                <span data-purecounter-start="0" data-purecounter-end="1232" data-purecounter-duration="1" class="purecounter"></span>
                <p>Öğrenciler</p>
            </div>

            <div class="col-lg-3 col-6 text-center">
                <span data-purecounter-start="0" data-purecounter-end="@Model.Count" data-purecounter-duration="1" class="purecounter"></span>
                <p>İlanlar</p>
            </div>

            <div class="col-lg-3 col-6 text-center">
                @{
                    int totalLEsson = 0;
                }
                @foreach (var showcard in Model)
                {
                    totalLEsson += showcard.Teacher.TotalLesson;
                }
                <span data-purecounter-start="0" data-purecounter-end="@totalLEsson" data-purecounter-duration="1" class="purecounter"></span>
                <p>Tamamlanan Dersler</p>
            </div>

            <div class="col-lg-3 col-6 text-center">
