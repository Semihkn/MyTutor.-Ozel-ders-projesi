        <div class="section-title">
            <h2>İlanlar</h2>
            <p>Popülar İlanlar</p>
        </div>

        <div class="row" data-aos="zoom-in" data-aos-delay="100">
            <div class="row g-5">
                @foreach (var showCard in Model)
                {
                    <div class="col-md-3">

                    @if (showCard.Teacher.RatingPoint >= 0) // scale for popularity
                    {
                        @await Html.PartialAsync("_ShowCard", showCard)
                    }
                    </div>

                }
            </div>

        </div>
    </div>
</section><!-- End Popular ShowCards Section -->
