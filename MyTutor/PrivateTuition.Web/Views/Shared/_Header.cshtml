@using Microsoft.AspNetCore.Identity
@inject UserManager<MyIdentityUser> UserManager
@inject SignInManager<MyIdentityUser> SignInManager

<div class="container d-flex align-items-center">

    <h1 class="logo me-auto"><a class="navbar-brand fs-1" asp-area="" asp-controller="Home" asp-action="Index">My Tutor.</a></h1>

    <!-- <a href="index.html" class="logo me-auto"><img src="assets/img/logo.png" alt="" class="img-fluid"></a>-->

    <nav id="navbar" class="navbar order-last order-lg-0">
        <ul class="d-flex align-items-center">
            <li class="nav-item">
                <a class=" nav-link active" asp-area="" asp-controller="Home" asp-action="Index">Anasayfa</a>
            </li>
            @* <li class="nav-item">
            <a class="nav-link" href="about.html">About</a>
            </li>*@
            <li class="nav-item">
                <a class="nav-link " asp-area="" asp-controller="PrivateTuition" asp-action="List">İlanlar</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-area="" asp-controller="PrivateTuition" asp-action="TeacherList">Öğretmenler</a>
            </li>

            @*<li><a href="events.html">Events</a></li>
            <li><a href="pricing.html">Pricing</a></li>*@
            @if (User.Identity.IsAuthenticated)
            {
                @if (User.IsInRole("Teacher"))
                {
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Teacher" asp-action="ShowCardList">İlanlarım </a>
                    </li>

                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Teacher" asp-action="LessonRequestList">Öğrenci Taleplerim </a>
                    </li>
                }

                @if (User.IsInRole("Student"))
                {
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Student" asp-action="LessonRequestList">Öğretmen Taleplerim </a>
                    </li>
                }

                @if (User.IsInRole("Admin"))
                {

                    <li class="dropdown">
                        <a class="nav-link"><span>Admin İşlemleri</span> <i class="bi bi-chevron-down"></i></a>
                        <ul>
                            <li><a class="nav-link" asp-area="" asp-controller="Admin" asp-action="SubjectList">Dersler</a></li>

                            <li><a class="nav-link" asp-area="" asp-controller="Admin" asp-action="CategoryList">Kategoriler</a></li>
                            <li><a class="nav-link" asp-area="" asp-controller="Admin" asp-action="UserList">Kullanıcılar</a></li>
                            <li><a class="nav-link" asp-area="" asp-controller="Admin" asp-action="RoleList">Roller</a></li>

                            <li class="dropdown">
                                <a href="#"><span>Deep Drop Down</span> <i class="bi bi-chevron-right"></i></a>
                                <ul>
                                    <li><a href="#">Deep Drop Down 1</a></li>
                                    <li><a href="#">Deep Drop Down 2</a></li>
                                    <li><a href="#">Deep Drop Down 3</a></li>
                                    <li><a href="#">Deep Drop Down 4</a></li>
                                    <li><a href="#">Deep Drop Down 5</a></li>
                                </ul>
                            </li>
                        </ul>
                    </li>
                }


            }



            @if (!User.Identity.IsAuthenticated)
            {
                <li class="nav-item">
                    <a class="nav-link" asp-area="" asp-controller="Account" asp-action="Login"><span>Giriş Yap   </span></a>
                </li>

                <li class="nav-item">
                    <a class="nav-link " asp-area="" asp-controller="Account" asp-action="Register">Kayıt Ol</a>
                </li>
            }
            else
            {
                <li class="nav-item dropdown pe-3">

                    <a class="nav-link nav-profile d-flex align-items-center pe-0" href="#" data-bs-toggle="dropdown">

                        <img src="~/assets/img/trainers/trainer-1.jpg" alt="Profile" class="rounded-circle">

                        <span class="d-none d-md-block dropdown-toggle ps-2">@User.Identity?.Name!</span>
                    </a><!-- End Profile Iamge Icon -->

                    <ul class="dropdown-menu dropdown-menu-end dropdown-menu-arrow profile">
                        <li class="dropdown-header">
                            <h5 >Hello @UserManager.GetUserName(User)!</h5>
                            @if (User.IsInRole("Admin"))
                            {
                                <span>Admin</span> 
                            }
                            else if (User.IsInRole("Teacher"))
                            {
                                <span>Öğretmen</span>
                            }
                            else
                            {
                                <span>Öğrenci</span>
                            }
                        </li>
                        <li>
                            <hr class="dropdown-divider">
                        </li>

                        <li>
                            <a class="dropdown-item d-flex align-items-center" asp-area="" asp-controller="Account" asp-action="UserProfile">
                                <i class="bi bi-person"></i>
                                <span>My Profile</span>
                            </a>
                        </li>
                        <li>
                            <hr class="dropdown-divider">
                        </li>

                        <li>
                            <a class="dropdown-item d-flex align-items-center" href="users-profile.html">
                                <i class="bi bi-gear"></i>
                                <span>Account Settings</span>
                            </a>
                        </li>
                        <li>
                            <hr class="dropdown-divider">
                        </li>

                        <li>
                            <a class="dropdown-item d-flex align-items-center" href="pages-faq.html">
                                <i class="bi bi-question-circle"></i>
                                <span>Need Help?</span>
                            </a>
                        </li>
                        <li>
                            <hr class="dropdown-divider">
                        </li>

                        <li>
                            <a class="dropdown-item d-flex align-items-center" asp-area="" asp-controller="Account" asp-action="Logout">
                                <i class="bi bi-box-arrow-right"></i>
                                <span>Çıkış Yap</span>
                            </a>
                        </li>

                    </ul><!-- End Profile Dropdown Items -->
                </li>

                <!-- End Profile Nav -->
            }
        </ul>

        <i class="bi bi-list mobile-nav-toggle"></i>
    </nav><!-- .navbar -->
    @*<a href="courses.html" class="get-started-btn">Get Started</a>*@

</div>