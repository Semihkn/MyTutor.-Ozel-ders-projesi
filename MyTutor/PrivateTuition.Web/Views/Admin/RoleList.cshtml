@model List<IdentityRole>
@section Styles{
    @await Html.PartialAsync("_DataTablesCssPartial")
}
@section Scripts{
    @await Html.PartialAsync("_DataTablesScriptsPartial")
}


<div class="breadcrumbs">
    <div class="container">
        <h2>Rol Listesi</h2>
    </div>
</div>

<section id="events" class="events">
    <div class="container" data-aos="fade-up">
        <div class="row" data-aos="zoom-in" data-aos-delay="100">


            <div>
                <a asp-controller="Admin"
                   asp-action="RoleCreate"
                   class="btn btn-sm btn-primary">Rol Oluştur</a>
                <hr />
                <table class="table table-sm table-striped table-hover" id="myTable">
                    <thead>
                        <tr>
                            <td>Id</td>
                            <td>Rol Adı</td>
                            <td></td>
                        </tr>
                    </thead>

                    <tbody>
                        @if (Model.Count() > 0)
                        {
                            @foreach (var role in Model)
                            {
                                <tr>
                                    <td>@role.Id</td>
                                    <td>@role.Name</td>
                                    <td>
                                        <a asp-controller="Admin"
                                   asp-action="RoleEdit"
                                   asp-route-id=@role.Id
                                   class="btn btn-sm btn-warning me-2">Düzenle</a>

                                        <form asp-controller="Admin"
                                      asp-action="RoleDelete"
                                      asp-route-id=@role.Id
                                      method="post" class="d-inline">
                                            <button class="btn btn-sm btn-danger me-2">Sil</button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            @await Html.PartialAsync("_NoRecord")
                        }
                    </tbody>
                </table>
            </div>




        </div>
    </div>
</section>