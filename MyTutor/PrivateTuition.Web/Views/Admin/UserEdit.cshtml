@model UserModel

<div class="breadcrumbs">
    <div class="container">
        <h2>Kullanıcı Düzenle</h2>
    </div>
</div>

<section id="events" class="events">
    <div class="container" data-aos="fade-up">
        <div class="row" data-aos="zoom-in" data-aos-delay="100">
            <form asp-controller="Admin" asp-action="UserEdit" method="post">
                <input type="hidden" name="UserId" value=@Model.UserId />
                <div class="row">
                    <div class="col-md-8">
                        <div class="form-group row mb-2">
                            <div class="col-md-2">
                                <label asp-for="FirstName">Ad :</label>
                            </div>
                            <div class="col-md-10">
                                <input type="text" asp-for="FirstName" />
                            </div>
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>
                        <div class="form-group row mb-2">
                            <div class="col-md-2">
                                <label asp-for="LastName">Soyad :</label>
                            </div>
                            <div class="col-md-10">
                                <input type="text" asp-for="LastName" />
                            </div>
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>
                        <div class="form-group row mb-2">
                            <div class="col-md-2">
                                <label asp-for="UserName">Kullanıcı Adı :</label>
                            </div>
                            <div class="col-md-10">
                                <input type="text" asp-for="UserName" />
                            </div>
                            <span asp-validation-for="UserName" class="text-danger"></span>
                        </div>
                        <div class="form-group row mb-2">
                            <div class="col-md-2">
                                <label asp-for="Email"></label>
                            </div>
                            <div class="col-md-10">
                                <input asp-for="Email" />
                            </div>
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="form-group row mb-2">
                            <div class="col-md-10 offset-2">
                                <button class="btn btn-success" type="submit">Değişikleri Kaydet</button>
                            </div>

                        </div>
                    </div>


                    <div class="col-md-4">
                        @foreach (var role in ViewBag.Roles)
                        {
                            <div class="form-check">
                                <input type="checkbox"
                                   class="form-check-input"
                                   value=@role
                                   name="SelectedRoles"
                                   id=@role
                                   @{
                                   try
                                   {
                                       @(Model.SelectedRoles.Any(i=>i==role) ? "checked" : "")
                                   }
                                   catch (Exception)
                                   {
                                   }
                                   }>
                                <label class="form-check-label">@role</label>
                            </div>
                        }
                    </div>
                </div>
            </form>

        </div>
    </div>
</section>
@section Scripts
{
    @await Html.PartialAsync("_ValidationScriptsPartial")
}